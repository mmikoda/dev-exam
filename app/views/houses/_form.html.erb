<%= form_with(model: house, local: true) do |form| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :rent %>円
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :age %>年
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remark %>
  </div>

  <%= form.fields_for :stations do |station| %>
    <h2>最寄駅<%= station.index + 1 %></h2>
    <div class="field">
      <%= station.label :路線名 %>
      <%= station.text_field :route_name %>
    </div>

    <div class="field">
      <%= station.label :駅名 %>
      <%= station.text_field :station_name %>
    </div>

    <div class="field">
      <%= station.label :徒歩分数 %>
      <%= station.text_field :minuites %>分
    </div>

    <div class="delete_station"></div>
  <% end %>

  <div class="actions">
    <%= form.submit :登録する %>
  </div>
<% end %>